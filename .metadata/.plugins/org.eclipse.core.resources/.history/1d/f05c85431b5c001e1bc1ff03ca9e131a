package TH2;

public class Task1_1 {
	// S(n)=1-2+3-4+…+ ((-1)^(n+1) ).n , n>0
	public static int getSn1(int n) {
//		int result = 1;
//		if (n == 1) {
//			return 1;
//		}
//		return  (int) (getSn1(n - 1) + Math.pow((-1), (n + 1) * n));
		if (n == 1) {
	        return 1; // Trường hợp cơ sở: S(1) = 1
	    } else {
	        // S(n) = S(n-1) + (-1)^(n+1) * n
	        return getSn1(n - 1) + ((n % 2 == 0) ? -n : n);
	    }
	}

