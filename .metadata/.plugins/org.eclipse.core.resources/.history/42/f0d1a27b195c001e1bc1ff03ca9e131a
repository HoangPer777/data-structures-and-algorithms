package TH2;

public class Task1_1 {
	// S(n)=1-2+3-4+â€¦+ ((-1)^(n+1) ).n , n>0
	public static int getSn1(int n) {
		int result = 1;
		if (n < 0) {
			return 0;
		} else {
			result += Math.pow(-1, n + 1) * n;
			return result;
		}

	}
	public static void main(String[] args) {
		System.out.println(getSn1(5));
	}
}
