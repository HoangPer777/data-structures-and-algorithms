package TH2;

public class Task1_1 {
	// S(n)=1-2+3-4+…+ ((-1)^(n+1) ).n , n>0
	public static int getSn1(int n) {
		int result = 1;
		if (n == 1) {
			return 1;
		}
		return result += (getSn1(n - 1) + Math.pow(-1, (n + 1) * n));
	}

	// S(n)=1+1.2+1.2.3+…+1.2.3…n, n>0
